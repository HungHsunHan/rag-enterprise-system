{
  "name": "hr-chatbot-system",
  "version": "1.0.0",
  "description": "HR Internal Q&A System with RAG technology",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && python -m uvicorn app.main:app --reload",
    "build": "npm run build:frontend",
    "build:frontend": "cd apps/frontend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd apps/frontend && npm run test",
    "test:backend": "cd apps/backend && python -m pytest",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "lint:backend": "cd apps/backend && ruff check .",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd apps/frontend && npm run format",
    "format:backend": "cd apps/backend && black . && ruff check . --fix"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}